---
const docs = await Astro.glob("../pages/docs/*.{md,mdx}");

const sortedDocs = docs.sort(function (a, b) {
  return a.frontmatter.order - b.frontmatter.order;
});

const groupedDocs = sortedDocs.reduce((docs, object) => {
  const property = object.frontmatter.section;
  docs[property] = docs[property] || [];

  docs[property].push(object);

  return docs;
}, {});
---

<label
  for="navigation"
  class="fixed bottom-0 left-0 z-50 flex items-center justify-center w-12 h-12 mb-4 ml-4 bg-white border rounded-full shadow-lg cursor-pointer text-slate-600 border-slate-300 lg:hidden transition duration-200 ease-in-out active:scale-95"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="w-6 h-6"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <path stroke-linecap="round" stroke-linejoin="round" d="M4 8h16M4 16h16"
    ></path>
  </svg>
</label>

<input type="checkbox" name="navigation" id="navigation" class="hidden peer" />
<label
  for="navigation"
  id="navigation-backdrop"
  aria-hidden
  class="fixed hidden transition-opacity peer-checked:block duration-200 z-30 w-full h-full bg-slate-300/50 lg:hidden cursor-pointer"
></label>
<div
  id="navigation-container"
  class="fixed top-[3.5rem] h-screen shadow-xl px-4 left-0 hidden peer-checked:block transition-transform -translate-x-full peer-checked:translate-x-0 lg:transition-none lg:translate-x-0 duration-200 ease-in-out motion-reduce:transistion-none lg:relative lg:top-0 lg:h-auto lg:px-0 lg:block lg:flex-none lg:shadow-none z-40"
>
  <div
    class="absolute inset-y-0 right-0 w-full lg:w-[50vw] bg-white lg:bg-slate-50"
  >
  </div>

  <nav
    class="sticky top-[4.5rem] w-64 pr-8 text-base lg:text-sm xl:w-72 xl:pr-16"
  >
    <ul
      role="list"
      class="-ml-0.5 h-[calc(100vh-4.5rem)] overflow-y-auto pt-7 pb-20 md:pb-7 pl-0.5 space-y-8"
    >
      {
        Object.entries(groupedDocs).map((section) => (
          <li>
            <h3 class="font-semibold tracking-tight text-slate-900">
              {section[0]}
            </h3>

            <ul role="list" class="pl-3 mt-3 space-y-2">
              {section[1].map((item) => (
                <li>
                  <a
                    href={item.url}
                    class="text-slate-900 hover:text-slate-800"
                  >
                    {item.frontmatter.title}
                  </a>
                </li>
              ))}
            </ul>
          </li>
        ))
      }
    </ul>
  </nav>
</div>

<style>
  #navigation-backdrop,
  #navigation-container {
    transition-behavior: allow-discrete;
  }

  @starting-style {
    #navigation-backdrop {
      opacity: 0;
    }

    #navigation-container {
      transform: translateX(-100%);
    }
  }
</style>
